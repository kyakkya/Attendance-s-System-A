<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
<div>
  <h1>勤怠編集画面</h1>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出勤</th>
        <th>退社</th>
        <th>翌日</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>指示者確認㊞</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
       <% 
          css_class = 
          case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
          when '土'
            'text-primary'
          when '日'
            'text-danger'
          end
         %>
       <%= f.fields_for "attendances[]", day do |attendance| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <% if !current_user.admin? && (Date.current < day.worked_on) %>
            <td><%= attendance.time_field :restarted_at,  readonly: true, class: "form-control" %></td>
            <td><%= attendance.time_field :refinished_at, readonly: true, class: "form-control" %></td>
          <% else %> 
            <td><%= attendance.time_field :restarted_at, class: "form-control" %></td>
            <td><%= attendance.time_field :refinished_at, class: "form-control" %></td>
          <% end %>    
          <td><%= attendance.check_box :change_next_day %></td>
          <td>
            <% if day.restarted_at.present? && day.refinished_at.present? %>
              <% if day.change_next_day == "1" %>
                <%= re_working_times(day.restarted_at, day.refinished_at, day.change_next_day) %>
              <% else %>
                <%= re_working_times(day.restarted_at, day.refinished_at, day.change_next_day) %>
              <% end %>  
            <% end %>
          </td>
          <td><%= attendance.text_field :note, class: "form-control" %></td>
          <td><%= attendance.collection_select :month_check_superior,  @change_superiors, :name, :name, :include_blank => true %></td>
         </tr>
      <% end %>
    <% end %>  
    </tbody>
  </table>
</div>

<div class="center">
  <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-primary" %>
  <%= f.submit "編集を送信する", class: "btn btn-lg btn-primary" %>
</div>
<% end %>