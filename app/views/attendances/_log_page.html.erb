<% provide(:class_text, 'log-page') %>
<% provide(:button_text, '勤怠修正ログ（承認済)' ) %>
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    
    <div class="modal-body">
      <%= form_with(model: @user, url:'#', local: true) do |f| %>
      
        <h1 class="modal-title">【勤怠ログ】</h1> 
        <table  border=2 width=100%, class="table table-bordered table-condensed user-table">
          <thead>
            <tr>
              <td width="120">リセット</td>
            </tr>
            <tr>
              <td width="80">年</td>
              <td width="120"><%= f.select :year, -5.years.from_now.year.. 5.years.from_now.year, default: Date.today %></td>
              
            </tr>
             <tr>
              <td width="120">月</td>
              <td width="120"><%= f.select :month, 1..12, default: Date.today %></td>
            </tr>
            <tr> 
               <th>日付</th>
               <th>変更前出社時間</th>
               <th>変更前退社時間</th>
               <th>変更後出社時間</th>
               <th>変更後退社時間</th>
               <th>指示者</th>
               <th>承認日</th>
             </tr>
          </thead>
          
          <tbody>
            <% @approvaled.each do |day| %>
              <tr>
               <td><%= day.worked_on %></td>
               <td><%= l(day.started_at, format: :convinient_time)if day.started_at.present? %></td>
               <td><%= l(day.finished_at, format: :convinient_time) if day.finished_at.present? %></td>
               <td><%= l(day.restated_at, format: :convinient_time)if day.restated_at.present? %></td>
               <td><%= l(day.refinished_at, format: :convinient_time) if day.refinished_at.present? %><</td>
               <td><%= day.month_check_superior %></td>
               <td><%= day.month_update %></td>
             </tr>
           <% end %>  
          </tbody>
        </table>
      <% end %>
    </div>  
  </div>
</div>
 