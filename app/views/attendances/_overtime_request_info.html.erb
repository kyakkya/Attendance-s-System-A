<% provide(:class_text, 'overtime-request-info') %>
<% provide(:button_text, '残業申請一覧') %>


<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【#{}からの残業申請】</h1>
    </div>
    
    <div class="modal-body">
    <%= form_with(model: @attendance, url: update_overtime_request_info_users_path(@user), local: true, method: :patch) do |f| %>  
      <table  border=2 width=100%, class="table table-bordered table-condensed user-table">
       <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>終了予定時間</th>
          <th>指定勤務終了予定時間</th>
          <th>時間外時間</th>
          <th>業務処理内容</th>
          <th>指示者確認㊞</th>
          <th>変更</th>
          <th>勤怠を確認する</th>
        </tr>
       </thead>
       
     
        
　     <tbody>
              <% 
                css_class = 
                case %w{日 月 火 水 木 金 土}[@attendance.worked_on.wday]
                when '土'
                  'text-primary'
                when '日'
                  'text-danger'
                end
              %> 
          
           　 <tr> 
               <td><%= l(@attendance.worked_on, format: :short) %></td>
                  <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[@attendance.worked_on.wday] %></td>
                  <td>
                      <%= f.time_field :overtime, class: "form-control" %>
                  </td>    
                  <td><%= f.time_field :designated_work_end_time, class: "form-control" %></td>
                  <td>
                      <%= f.text_field :next_day, class: "form-control" %>
                  </td>
                  <td><%= f.collection_select :superior,  @superiors, :name, :name, :include_blank => true %> </td>
                  <td><%= f.text_field :task_menu, class: "form-control" %></td>
                  <td></td>
                  <td><%= f.check_box :change, class: "form-control" %></td>
                  <td></td>
             </tr>  
       </tbody>    
        
      </table> 
      <%= f.submit "変更を申請する", class: "btn btn-primary btn-lg btn-block" %></div> 
      <% end %>
  　 </div> 
 　 </div> 
 </div>  
    
      
     
        
            
            
                  
            