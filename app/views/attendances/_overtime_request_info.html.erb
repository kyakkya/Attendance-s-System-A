<% provide(:class_text, 'overtime-request') %>
<% provide(:button_text, '残業申請一覧') %>


<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>  
    <% @requesters.each do |user_id, attendances| %>
      <h1 class="modal-title">【<%= "#{User.find(user_id).name}" %>からの残業申請】</h1>
      <div class="modal-body">
     <%= form_with(model: @attendance, url: update_overtime_request_info_user_attendances_path(user_id), local: true, method: :patch) do |f| %> 
        <table  border=2 width=100%, class="table table-bordered table-condensed user-table">
          <thead>
            <tr>
              <th>日付</th>
              <th>曜日</th>
              <th>終了予定時間</th>
              <th>指定勤務終了予定時間</th>
              <th>時間外時間</th>
              <th>業務処理内容</th>
              <th>指示者確認㊞</th>
              <th>変更</th>
              <th>勤怠を確認する</th>
            </tr>
          </thead>
          <% attendances.each do |day| %>
            <tbody>
               <% 
                css_class = 
                case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                when '土'
                  'text-primary'
                when '日'
                  'text-danger'
                end
              %> 
          
              <tr>
                <td><%= l(day.worked_on, format: :short) %></td>
                 <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
                <td><%= l(day.overtime, format: :time) %></td>
                <td><%= l(User.find(user_id).designated_work_end_time, format: :time) %></td>
                <td><%= day.overtime.hour - User.find(user_id).designated_work_end_time.hour  %>:00</td>
                <td><%= day.task_menu %></td>
                <td><select name="status" id="status">
                    <option value="0"></option>
                    <option value="1">申請中</option>
                    <option value="2">承認</option>
                    <option value="3">否認</option>
                </td>
                <td><%= f.check_box :superior_checker, class: "form-control" %></td>
                <td><%= link_to "確認", comfirmation_user_path(user_id), method: :get, class: "btn btn-primary btn-lg btn-block" %></td>
              </tr>  
           </tbody>
         <% end %>
       </table>
     
       <%= f.submit "変更を申請する", class: "btn btn-primary btn-lg btn-block" %>
       
   <% end %>
     </div>
   <% end %> 
  
  </div> 
</div>  
    
      
     
        
            
            
                  
            