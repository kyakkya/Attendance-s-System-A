 <h1>拠点地編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @position, url: edit_position_path(@position, params[:id]), local: true, method: :get) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :"拠点番号", class: "label-signup"%>
      <%= f.number_field :place_num,  class: "form-control" %>

      <%= f.label :"拠点地",class: "label-signup" %>
      <%= f.text_field :place_name,  class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-user--edit" %>
    <% end %>
  </div>
</div>