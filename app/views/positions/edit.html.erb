 <h1>拠点地編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @position, url: position_path(@position), local: true, method: :patch) do |f| %>
      
      
      <%= f.label :"拠点番号", class: "label-signup"%>
      <%= f.number_field :place_num,  class: "form-control" %>

      <%= f.label :"拠点地",class: "label-signup" %>
      <%= f.text_field :place_name,  class: "form-control" %>
      
      <%= f.label :"拠点種類",class: "label-signup" %>
      <%= f.select :place_status, ['出勤','退勤'], class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-user--edit" %>
    <% end %>
  </div>
</div>