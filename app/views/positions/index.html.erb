<% provide(:title, '拠点一覧') %>
<div class=center>
  <h1>拠点一覧</h1>
   <table  border=2 width=100%, class="table table-bordered table-condensed user-table">
     <thead>
    　<tr>
    　  <th></th>
    　  <th></th>
    　 <th>拠点番号</th>
    　 <th>拠点地</th>
    　 <th>拠点種類</th>
    　</tr>
  　</thead> 
  　
  　 <tbody>
  　  <% @positions.each do|position| %>   
    　 <tr>
          <td><%= link_to "修正",edit_position_path(position, position[:id]) , class: "btn btn-primary" %></td>
    　     <td><%= link_to "削除" , position, method: :delete , class: "btn btn-primary" %></td>
    　     <td><%= position.place_num %></td>
    　     <td><%= position.place_name %></td> 
          <td><%= position.place_status %></td> 
       </tr>
     <% end %>
     <tr>
       <td><%= link_to "拠点情報の追加", new_position_path, class: "btn btn-primary" %></td>
           
     </tr>   
     
  　</tbody> 
  </table>